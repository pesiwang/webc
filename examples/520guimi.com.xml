<web>
	<!--{第一部分,定义服务器配置}-->
	<server>
		<host>520guimi.com</host>
		<port>80</port>
		<protocol>http</protocol>
		<namespace>gmq</namespace>
	</server>

	<!--{第二部分,定义常见结构体}-->
	<structure name="user_info">
		<param name="nick" type="STRING" validate="^.{3,16}$"></param>
		<param name="age" type="INTEGER">18</param>
	</structure>
	<structure name="user_account">
		<param name="phone" type="STRING" validate="^1[3458][0-9]{9}$"></param>
		<param name="password" type="STRING" validate="^\\w{32}$"></param>
	</structure>
	<structure name="user">
		<param name="info" type="user_info"></param>
		<param name="account" type="user_account"></param>
	</structure>

	<!--{第三部分,定义web接口列表}-->
	<interface name="user.register"><!--用户注册接口-->
		<request>
			<param name="type" type="INTEGER">1</param>
			<param name="info" type="user_info"></param>
		</request>
		<response>
			<param name="result" type="BOOL">true</param>
			<param name="info" type="user_info"></param>
		</response>
	</interface>
	<interface name="user.signin"><!--用户登录接口-->
		<request>
			<param name="account" type="user_account"></param>
		</request>
		<response>
			<param name="result" type="INTEGER">0</param>
			<param name="reason" type="STRING"></param>
		</response>
	</interface>
</web>
